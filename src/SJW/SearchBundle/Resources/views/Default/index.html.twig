{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets filter="cssrewrite"
    'bundles/sjwsearch/css/lib/*'

    'bundles/sjwsearch/css/layout.css'

    output='css/dist/search.css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
    '@SJWSearchBundle/Resources/public/js/lib/*'    
    '@SJWSearchBundle/Resources/public/js/search.js'
    
    output='js/dist/search.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block title %}
    Code Challenge
{% endblock %}

{% block body %}
    <div class="title-container">
        <h1>Population search</h1>
        <p>A simple tool to search Finnish towns and their populations.</p>
    </div>

    <div class="main-container">
        <form class="form-inline" role="form" id="search-form">
            <div class="form-group">
                <label class="sr-only" for="search-input">Search</label>
                <input type="text" class="form-control" id="search-input" placeholder="Search" autocomplete="off">
            </div>
            <button type="submit" class="btn btn-default js-do-search">Do search!</button>
            <input type="hidden" name="numberOfCities" value="{{ numberOfCities }}" id="number-of-cities" />
            <a style="float: right" href="{{ path('sjw_settings') }}">Settings</a>
        </form>

        <hr />

        <div class="results">

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Zip</th>
                    <th>Town</th>
                    <th>Population</th>
                </tr>
                </thead>
                <tbody id="table-body">
                    
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
