{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets filter="cssrewrite"
    'bundles/sjwsearch/css/lib/*'

    'bundles/sjwsearch/css/layout.css'

    output='css/dist/search.css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
    '@SJWSearchBundle/Resources/public/js/lib/*'

    '@SJWSearchBundle/Resources/public/js/search.js'

    output='js/dist/search.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block title %}
    Code Challenge
{% endblock %}

{% block body %}
    <div class="title-container">
        <h1>Population search</h1>
        <p>A simple tool to search Finnish towns and their populations.</p>
    </div>

    <div class="main-container">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="flash-message alert alert-success">
                <em>{{ flashMessage }}</em>
            </div>
        {% endfor %}

        <form class="form-inline" role="form">
            <div class="form-group">
                <label class="sr-only" for="search-input">Search</label>
                <input type="email" class="form-control" name="search" id="search-input" placeholder="Search" autocomplete="off">
            </div>
            <button type="submit" class="btn btn-default js-do-search" name="submit">Do search!</button>
            <a href="{{ path('settings') }}" class="pull-right">Settings</a>
        </form>

        <hr />

        <div class="results">

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Zip</th>
                    <th>Town</th>
                    <th>Population</th>
                </tr>
                </thead>
                <tbody>

                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
